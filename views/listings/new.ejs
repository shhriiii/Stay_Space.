<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h3> Create a New listing</h3>
    <form method="POST" action="/listings">
        <div>
        <label for="title" class="form-label"> title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control">
        </div>
        <br>
    <div>
        <label for="description" class="form-label"> Description</label>
        <textarea name="listing[description]" placeholder="enter description" class="form-control"></textarea>
    </div>
        <br> 
    <div>
        <label for="image" class="form-label"> image</label>
        <input name="listing[image]" placeholder="image url " type="text" class="form-control">
    </div>
        <br> 
   <div class="row">
       <div class="mb-3 col-4" >
          <label for="price" class="form-label"> Number</label>
          <input name="listing[price]" placeholder="enter number" type="number" class="form-control">
       </div>
        <br> <br>
        <div class="mb-3 col-8">
            <label for="country" class="form-label"> Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control">
        </div>
   </div>
        <div>
            <label for="location" class="form-label"> Location</label>
           <input name="listing[location]" placeholder="enter Location" type="text" class="form-control">
           </div>
        
        <br> <br>
        <button class="btn btn-dark add-btn">add</button>
        <br> <br>
    </form>
    </div>
    </div>
</body>
